<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MusicNotesCodeTest.code.view.Library.LibraryPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		     xmlns:util="clr-namespace:MusicNotesCodeTest.code.util;assembly=MusicNotesCodeTest">
	
    <Grid BackgroundColor="#6f869d"
              HeightRequest="1"
              HorizontalOptions="FillAndExpand" />

        <ListView x:Name="SongsListView"
				  BackgroundColor="Transparent"
                  HorizontalOptions="FillAndExpand"
                  ItemsSource="{Binding Songs}"
                  RowHeight="45">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>

                            <Grid ColumnSpacing="0" RowSpacing="0">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
									<RowDefinition Height="14" />
									<RowDefinition Height="2" />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="50" />
                                </Grid.ColumnDefinitions>

								<Image Grid.Row="0"
									   Grid.RowSpan="3"
                                       Grid.Column="0"
                                       HeightRequest="26"
                                       Source="{Binding Song.IconSource}"
                                       VerticalOptions="Center"
                                       WidthRequest="26" />

                                <Label Grid.Row="0"
                                       Grid.Column="1"
                                       Text="{Binding Title}"
                                       TextColor="Black"
									   VerticalOptions="CenterAndExpand"/>

								<Label Grid.Row="1"
                                       Grid.Column="1"
									   Grid.ColumnSpan="2"
                                       Text="{Binding SongDetails}"
									   FontSize="10"
                                       TextColor="Gray"
									   VerticalOptions="CenterAndExpand"/>

								<Image Grid.Row="0"
									   Grid.RowSpan="3"
                                       Grid.Column="2"
                                       HeightRequest="13"
                                       Source="{Binding Song.ArrowSource}"
                                       VerticalOptions="Center"
                                       WidthRequest="13" />

                            </Grid>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
</ContentPage>